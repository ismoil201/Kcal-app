<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Orqa fon rasmi -->
        <View
            android:id="@+id/iv_image_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:background="#FFDDDD"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Counter rasmi -->
        <ImageView
            android:id="@+id/iv_counter_image"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:src="@drawable/img2"
            android:scaleType="centerCrop"
            android:layout_marginBottom="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/tv_register2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sliced meat"
            android:textSize="18sp"
            android:textColor="#9D9D9D"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintVertical_bias="0.15"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_counter_image" />

        <TextView
            android:id="@+id/tv_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sliced meat and potatoes"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_register2"
            android:fontFamily="@font/poppins_regular"
            android:textColor="#9D9D9D"/>


        <TextView
            android:id="@+id/tv_calory"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="705.6 Kcal "
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textColor="#333333"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:paddingVertical="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />






    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
